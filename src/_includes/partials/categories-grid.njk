<section class="py-12" aria-labelledby="categories-heading">
    <div class="container mx-auto px-4">
        <h2 id="categories-heading" class="text-2xl font-bold text-center mb-8">Shop by Category</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for category in collections.categories %}
            {% if category.data.featured %}
            <a href="{{ category.url }}" class="group">
                <div class="relative aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-100">
                    <img 
                        src="{{ category.data.image }}" 
                        alt="{{ category.data.title }}"
                        class="w-full h-full object-cover transition duration-300 group-hover:scale-105"
                        width="600"
                        height="400"
                        loading="lazy"
                    >
                    <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                        <h3 class="text-white text-xl font-bold">{{ category.data.title }}</h3>
                    </div>
                </div>
            </a>
            {% endif %}
            {% endfor %}
        </div>
    </div>
</section>