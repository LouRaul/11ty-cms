<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {% for category in collections.categories %}
    {% if category.data.featured %}
    <a href="{{ category.url }}" class="group">
        <div class="relative aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-100">
            {% image category.data.image, category.data.title, "(min-width: 1024px) 33vw, (min-width: 768px) 50vw, 100vw", "w-full h-full object-cover transition duration-300 group-hover:scale-105" %}
            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                <h3 class="text-white text-xl font-bold">{{ category.data.title }}</h3>
            </div>
        </div>
    </a>
    {% endif %}
    {% endfor %}
</div>