<section class="py-12" aria-labelledby="blog-heading">
    <div class="container mx-auto px-4">
        <h2 id="blog-heading" class="text-2xl font-bold text-center mb-8">Latest from Our Blog</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for post in collections.posts | limit(3) %}
            <article class="group">
                <a href="{{ post.url }}" class="block">
                    <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-100 mb-4">
                        <img 
                            src="{{ post.data.image }}" 
                            alt="{{ post.data.title }}"
                            class="w-full h-full object-cover transition duration-300 group-hover:scale-105"
                            width="600"
                            height="400"
                            loading="lazy"
                        >
                    </div>
                    <time class="text-sm text-gray-500" datetime="{{ post.date | isoDate }}">
                        {{ post.date | formatDate }}
                    </time>
                    <h3 class="mt-2 text-xl font-bold text-gray-900 group-hover:text-green-600">
                        {{ post.data.title }}
                    </h3>
                    <p class="mt-2 text-gray-600 line-clamp-2">{{ post.data.description }}</p>
                </a>
            </article>
            {% endfor %}
        </div>

        <div class="text-center mt-8">
            <a href="/blog" class="inline-flex items-center px-6 py-3 rounded-lg bg-green-600 text-white hover:bg-green-700 transition duration-200">
                Read More Posts
            </a>
        </div>
    </div>
</section>