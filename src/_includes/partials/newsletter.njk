<section class="py-12 bg-gray-900" aria-labelledby="newsletter-heading"
         x-data="{ 
             email: '', 
             submitted: false,
             loading: false,
             error: '',
             submit() {
                 if (!this.email) {
                     this.error = 'Please enter your email address';
                     return;
                 }
                 this.loading = true;
                 this.error = '';
                 
                 // Simulate form submission
                 setTimeout(() => {
                     this.submitted = true;
                     this.loading = false;
                 }, 1000);
             }
         }">
    <div class="container mx-auto px-4 max-w-2xl text-center">
        <h2 id="newsletter-heading" class="text-2xl font-bold text-white mb-4">
            Stay Updated
        </h2>
        <p class="text-gray-400 mb-6">
            Subscribe to our newsletter for eco-friendly tips and exclusive offers.
        </p>

        <template x-if="!submitted">
            <form @submit.prevent="submit" class="space-y-4">
                <div>
                    <label for="email-address" class="sr-only">Email address</label>
                    <input 
                        type="email"
                        id="email-address"
                        name="email"
                        x-model="email"
                        required
                        class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white placeholder-gray-400 focus:ring-2 focus:ring-green-500 focus:border-green-500"
                        placeholder="Enter your email"
                    >
                    <p x-show="error" 
                       x-text="error"
                       class="mt-2 text-red-400 text-sm"></p>
                </div>

                <button 
                    type="submit"
                    class="w-full md:w-auto px-6 py-3 rounded-lg bg-green-600 text-white hover:bg-green-700 transition duration-200 disabled:opacity-50"
                    :disabled="loading"
                >
                    <span x-show="!loading">Subscribe</span>
                    <span x-show="loading">Subscribing...</span>
                </button>
            </form>
        </template>

        <div x-show="submitted"
             class="bg-green-800 text-white p-4 rounded-lg"
             role="alert">
            <p class="font-bold">Thank you for subscribing!</p>
            <p>Check your email to confirm your subscription.</p>
        </div>
    </div>
</section>