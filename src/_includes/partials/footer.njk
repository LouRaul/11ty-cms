<footer class="bg-gray-900 text-gray-300">
    <div class="container mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Company Info -->
            <div>
                <h2 class="text-white text-lg font-bold mb-4">{{ site.name }}</h2>
                <p class="text-gray-400 mb-4">{{ site.description }}</p>
                <div class="flex space-x-4">
                    {% for item in navigation.social %}
                    <a href="{{ item.url }}" 
                       target="_blank" 
                       rel="noopener noreferrer"
                       class="text-gray-400 hover:text-white transition-colors duration-200"
                       aria-label="{{ item.title }}">
                        <svg class="w-6 h-6" fill="currentColor">
                            <use href="#icon-{{ item.icon }}"/>
                        </svg>
                    </a>
                    {% endfor %}
                </div>
            </div>

            <!-- Quick Links -->
            {% for group in navigation.footer %}
            <div>
                <h2 class="text-white text-lg font-bold mb-4">{{ group.title }}</h2>
                <ul class="space-y-2">
                    {% for item in group.items %}
                    <li>
                        <a href="{{ item.url }}" 
                           class="text-gray-400 hover:text-white transition-colors duration-200">
                            {{ item.title }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endfor %}

            <!-- Contact Info -->
            <div>
                <h2 class="text-white text-lg font-bold mb-4">Contact Us</h2>
                <ul class="space-y-2">
                    <li>
                        <a href="mailto:{{ contact.email }}" 
                           class="text-gray-400 hover:text-white transition-colors duration-200">
                            {{ contact.email }}
                        </a>
                    </li>
                    <li>
                        <a href="tel:{{ contact.phone }}" 
                           class="text-gray-400 hover:text-white transition-colors duration-200">
                            {{ contact.phone }}
                        </a>
                    </li>
                    <li class="text-gray-400">
                        {{ contact.address | safe }}
                    </li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-gray-800 mt-12 pt-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <p class="text-gray-400 text-sm">
                    Â© {% currentYear %} {{ site.name }}. All rights reserved.
                </p>
                <nav class="flex space-x-6 mt-4 md:mt-0">
                    {% for item in navigation.legal %}
                    <a href="{{ item.url }}" 
                       class="text-gray-400 hover:text-white text-sm transition-colors duration-200">
                        {{ item.title }}
                    </a>
                    {% endfor %}
                </nav>
            </div>
        </div>
    </div>
</footer>