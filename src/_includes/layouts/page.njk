---
layout: layouts/base.njk
---

<article class="min-h-screen">
    <!-- Page Header -->
    <header class="bg-white border-b">
        <div class="container mx-auto px-4 py-8">
            <!-- Breadcrumb -->
            <nav class="text-sm mb-4" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2">
                    <li>
                        <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
                    </li>
                    <li class="text-gray-400">/</li>
                    <li class="text-gray-900" aria-current="page">{{ title }}</li>
                </ol>
            </nav>

            <div class="max-w-4xl">
                <h1 class="text-4xl font-bold text-gray-900 mb-4">{{ title }}</h1>
                {% if description %}
                <div class="text-lg text-gray-600">{{ description }}</div>
                {% endif %}
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <div class="container mx-auto px-4 py-12">
        <!-- Content Area -->
        <div class="prose prose-lg max-w-4xl">
            {{ content | safe }}
        </div>

        {% if subcategories %}
        <!-- Subcategories Grid -->
        <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for subcategory in subcategories %}
            <a href="{{ subcategory.url }}" class="group">
                <div class="relative aspect-w-16 aspect-h-9 rounded-lg overflow-hidden">
                    <img 
                        src="{{ subcategory.image }}" 
                        alt="{{ subcategory.title }}"
                        class="object-cover transition duration-300 group-hover:scale-105"
                        width="400"
                        height="225"
                        loading="lazy"
                    >
                    <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                        <h2 class="text-white text-xl font-bold">{{ subcategory.title }}</h2>
                    </div>
                </div>
            </a>
            {% endfor %}
        </div>
        {% endif %}

        {% if highlights %}
        <!-- Features/Highlights -->
        <div class="mt-12 grid gap-8 md:grid-cols-3">
            {% for highlight in highlights %}
            <div class="text-center">
                <div class="w-12 h-12 mx-auto mb-4 text-green-600">
                    
                </div>
                <h3 class="text-lg font-bold mb-2">{{ highlight.title }}</h3>
                <p class="text-gray-600">{{ highlight.description }}</p>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</article>
