{
    "name": "eleventy-marketing-starter",
    "version": "1.0.0",
    "scripts": {
        "dev:js": "esbuild src/assets/js/alpine.js --bundle --outfile=_site/assets/js/alpine.js --watch",
        "build:js": "esbuild src/assets/js/alpine.js --bundle --minify --outfile=_site/assets/js/alpine.js",
        "dev:css": "postcss src/assets/css/style.css -o _site/assets/css/style.css --watch",
        "build:css": "postcss src/assets/css/style.css -o _site/assets/css/style.css",
        "dev:11ty": "eleventy --serve",
        "build:11ty": "eleventy",
        "postbuild": "pagefind --site _site --output-subdir _pagefind",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all clean build:*",
        "clean": "rimraf _site"
    },
    "dependencies": {
        "alpinejs": "^3.13.3",
        "decap-cms-app": "^3.1.0"
    },
    "devDependencies": {
        "@11ty/eleventy": "^3.1.2",
        "@11ty/eleventy-img": "^6.0.4",
        "autoprefixer": "^10.4.24",
        "esbuild": "^0.27.3",
        "html-minifier-terser": "^7.2.0",
        "luxon": "^3.7.2",
        "markdown-it": "^14.1.1",
        "markdown-it-anchor": "^9.2.0",
        "npm-run-all": "^4.1.5",
        "pagefind": "^1.4.0",
        "postcss": "^8.5.6",
        "postcss-cli": "^11.0.1",
        "rimraf": "^6.1.3",
        "tailwindcss": "^3.4.19"
    },
    "browserslist": [
        ">0.3%",
        "not dead",
        "not op_mini all"
    ]
}
